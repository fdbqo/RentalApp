{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "strict": true,
    "jsx": "react",
    "module": "esnext",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@screens/*": ["src/app/screens/*"],
      "@constants/*": ["src/constants/*"]
    },
    "types": ["react-native", "react"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ],
  "exclude": ["node_modules"]
}
